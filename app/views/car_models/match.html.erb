<style>
  h1 {
    font-size: 24px;
    margin-bottom: 20px;
    text-align: center;
  }

  .result {
    margin-top: 20px;
    padding: 10px;
    background-color: #f0f0f0;
    border-radius: 5px;
    text-align: center;
  }

  .result p {
    margin: 5px 0;
  }

  .no-match {
    color: red;
    font-style: italic;
  }
</style>
<h1>Car Model Matching Result</h1>

<% if @result.present? %>
  <div class="result">
    <p>Best Match: <%= @result[:best_match] %></p>
    <p>Similarity: <%= @result[:similarity] %>%</p>
  </div>
<% else %>
  <p>No match found.</p>
<% end %>
